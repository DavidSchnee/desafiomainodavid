<div class='col-md-6 col-md-offset-3 col-xs-12 form-cadastro'>
<h1>Cadastre-se</h1>
        <%= form_for @user do |f|%>
        <%= render 'layouts/error_messages', object: f.object%>
            <div class='form-group'>
                <%= f.label :nome%>
                <%= f.text_field :nome, class:'form-control'%>
            </div>
            <div class='form-group'>
                <%= f.label :link_de_sua_foto%>
                <%= f.text_field :foto, class:'form-control'%>
            </div>
            <div class='form-group'>
                <%= f.label :email%>
                <%= f.text_field :email, class:'form-control'%>
            </div>
            <div class='form-group'>
                <%= f.label :idade%>
                <%= f.number_field :idade, class:'form-control'%>
            </div>
            <div class='form-group select-sexo'>
                <%= f.label :sexo%>
                <%= f.select :sexo, options_for_select(['Masculino','Feminino']) , class:'form-control '%>
            </div>
            <div class='form-group'>
                <%= f.label :senha%>
                <%= f.password_field :password, class:'form-control'%>
            </div>
            <div class='form-group'>
                <%= f.label :confirmaÃ§Ã£o_senha%>
                <%= f.password_field :password_confirmation, class:'form-control'%>
            </div>
            <%= f.submit 'Cadastrar', class:'btn btn-primary'%>
            <%end%>
        </div>