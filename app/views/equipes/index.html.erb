

<h1>Suas Equipes Pokemon</h1>

<table class='table table-hover table-equipes'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipes.each do |equipe| %>
      <tr>
        <td><h5><%= equipe.nome %><h5></td>
        <td><%= link_to 'Ver Pokemons', equipe, class:'btn btn-primary botao' %></td>
        <td><%= link_to 'Adicionar Pokemon',new_pokemon_path, class:'btn btn-primary botao' %></td>
        <td><%= link_to 'Editar Equipe', edit_equipe_path(equipe), class:'btn btn-primary botao' %></td>
        <td><%= link_to 'Excluir Equipe', equipe, method: :delete, data: { confirm: "VocÃª deseja excluir a equipe #{equipe.nome}?" }, class:'btn btn-danger botao' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

